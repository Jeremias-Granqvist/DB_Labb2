<Window x:Class="DB_Labb2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Labb2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="MenuRow"
                           Height="20" />
            <RowDefinition x:Name="SearchRow"
                           Height="*" />
            <RowDefinition x:Name="ResultRow"
                           Height="4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Menu >
            <MenuItem Header="Main" />
            <MenuItem Header="Settings" />
            <MenuItem Header="Help" />
        </Menu>
        <TreeView x:Name="MenuTV"
                  Grid.Column="0"
                  Grid.Row="2"
                  Grid.RowSpan="2"
                  Margin="10,-60,10,20">
        </TreeView>
        
        <TextBox x:Name="SearchTB"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="20,30,300,30"
                 Text="Search Here" />
        <Button x:Name="SearchBTN"
                Content="Search"
                Grid.Row="1"
                Grid.Column="1"
                Margin="250,30,150,30"
                />
        <DataGrid x:Name="ResultGrid"
                  Grid.Row="3"
                  Grid.Column="1"
                  Margin="50,20,50,20">
            
        </DataGrid>
    </Grid>
</Window>
