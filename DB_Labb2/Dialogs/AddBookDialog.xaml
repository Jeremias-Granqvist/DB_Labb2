<Window x:Class="DB_Labb2.Dialogs.AddBookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Labb2.Dialogs"
        mc:Ignorable="d"
        Title="AddBookDialog" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="Add new book"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.ColumnSpan="2"
               FontSize="22" />

        <Label Content="ISBN13"
               Grid.Row="1"
               Height="25"
               Margin="10,10,10,10"
               HorizontalContentAlignment="Right" />
        <TextBox x:Name="FirstNameTB"
                 Grid.Row="1"
                 Height="25"
                 Margin="10,10,10,10"
                 Grid.Column="1" />
        <Label Content="Title"
               Grid.Row="2"
               Height="25"
               Margin="10,10,10,10"
               HorizontalContentAlignment="Right" />
        <TextBox x:Name="LastNameTB"
                 Grid.Row="2"
                 Grid.Column="1"
                 Height="25"
                 Margin="10,10,10,10"
                 Grid.ColumnSpan="3" />
        <Label Content="Authors Birthdate:"
               Grid.Row="3"
               Height="25"
               Margin="10,10,10,10"
               HorizontalContentAlignment="Right" />

        <Grid Grid.Column="2"
              Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox Name="YearComboBox"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Width="40"
                      Margin="1, 25"
                      Grid.Column="0" />
            <ComboBox Name="MonthComboBox"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Width="40"
                      Margin="1, 25"
                      Grid.Column="1" />
            <ComboBox Name="DayComboBox"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Width="40"
                      Margin="1, 25"
                      Grid.Column="3"
                      Grid.Row="2" />
        </Grid>
        <Button x:Name="SaveBTN"
                Content="Save"
                Grid.Row="4"
                Grid.Column="0"
                Margin="10,20" />
        <Button x:Name="CancelBTN"
                Content="Cancel"
                Grid.Row="4"
                Grid.Column="1"
                Margin="10,20" />

    </Grid>
</Window>
