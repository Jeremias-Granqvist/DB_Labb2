            <ComboBox Name="MonthComboBox"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Width="80"
                      Margin="1, 25"
                      Grid.Column="1"
                      ItemsSource="{Binding Source={StaticResource EnumMonths} }"
                      SelectionChanged="MonthComboBox_SelectionChanged" />
            <ComboBox Name="DayComboBox"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Width="40"
                      Margin="1, 25"
                      Grid.Column="3"
                      Grid.Row="2"
                      ItemsSource="{Binding daysInMonth}" />
        </Grid>
        <Button x:Name="SaveBTN"
                Content="Save"
                Grid.Row="4"
                Grid.Column="0"
                Margin="65,20,226,20"
                Grid.ColumnSpan="2"
                Click="SaveBTN_Click" />
        <Button x:Name="CancelBTN"
