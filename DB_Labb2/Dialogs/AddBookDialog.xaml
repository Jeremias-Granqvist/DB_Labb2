                 Height="25"
                 Width="100"
                 Grid.Column="1"
                 Margin="12,36,112,36" />

        <Label Content="Price:"
               Grid.Row="1"
               Grid.Column="2"
               Height="25"
               Margin="1,1,1,1"
               HorizontalContentAlignment="Right" />
        <TextBox x:Name="PriceTB"
                 Grid.Row="1"
                 Height="25"
                 Margin="10,10,10,10"
                 Grid.Column="3" />


        <Label Content="Title:"
               Grid.Row="2"
               Grid.Column="0"
               Height="25"
               Margin="10,10,10,10"
               HorizontalContentAlignment="Right" />
        <TextBox x:Name="TitleTB"
                 Grid.Row="2"
                 Grid.Column="1"
                 Width="100"
                 Height="25"
                 Margin="12,36,112,35" />

        <Label Content="Release Date:"
               Grid.Row="3"
               Height="25"
               Margin="10,10,10,10"
               HorizontalContentAlignment="center" />

        <Grid Grid.Column="2"
              Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
